
@{
    ViewBag.Title = "_ModalNote";
}


<div class="modal fade" id="modalNote" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="width:2200px;transform:translateX(-450px);">
    <div class="modal-dialog modal-lg" style="width:2200px;">
        <div class="modal-content" style="width:1500px;">
            <div class="modal-header">
                <h5 class="modal-title" id="txtTitleAddVoucher">Nota de Compra</h5>
                <strong onclick="closeModal()" style="cursor:pointer;">X</strong>
            </div>
            <div class="modal-body" style="width:100%">
                <div class="row">
                    <div class="col">

                <div class="form-group">
                     <label for="dropdownArticle">
                         Articulo
                     </label>
                     <select id="dropdownArticle" class="form-control p-3" style="width:100%; height:40px;">
                     </select>
                </div>
                    </div>
                    <div class="col-3">
                 <div class="form-group">
                     <label for="d">Fecha de Vencimiento</label>
                         <input type="date" id="txtDueDate" class="form-control" />
                </div>
                    </div>
                    <div class="col">

                <div class="form-group">
                    <label for="txtPeriodEnd">Cantidad</label>
                    <input type="number"  class="form-control" placeholder="0" id="txtQuantity"/>
                </div>
                    </div>
                    <div class="col">

                <div class="form-group">
                    <label for="txtPeriodEnd">Precio</label>
                    <input type="number"  class="form-control" placeholder="0" id="txtPrice"/>
                </div>
                    </div>
                    <div class="col">
                <div class="form-group">
                    <label for="txtPeriodEnd">Sub Total</label>
                    <input type="number"  class="form-control" value="0" id="txtSubTotal" readonly/>
                </div>
                    </div>
                </div>



            </div>
            <hr />
            <div class="text-center pb-4">
                <button type="button" class="btn btn-danger" onclick="closeModal()">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="saveArticle()">Guardar</button>
            </div>
        </div>
    </div>
</div>


