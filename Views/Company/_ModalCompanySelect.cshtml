
@{
    ViewBag.Title = "_ModalCompanySelect";
}

<style>
    .error {
        background: #C1303E;
        color: #fff;
        border-radius: 10px;
        width: 30px;
        height: 30px;
        font-size:22px;
        border: none;
        outline: none;
    }
</style>
<!-- Modal -->
<div class="modal fade" id="modalCompanyCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="txtTitleCompanyModal">Nueva Empresa</h5>
                <label onclick="closeModal()" style="cursor:pointer;">X</label>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="txtNameCompany">
                                Nombre
                            </label>
                            <input type="text" id="txtNameCompany" class="form-control form-control-sm" placeholder="Nombre" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="txtNitCompany">
                                Nit
                            </label>
                            <input type="number"  id="txtNitCompany" class="form-control form-control-sm" placeholder="Nit" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="txtSiglaCompany">
                                Sigla
                            </label>
                            <input type="text" id="txtSiglaCompany" class="form-control form-control-sm" placeholder="Sigla" autocomplete="off" />
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="txtCellphoneCompany">
                                Telefono
                            </label>

                            <div class="input-group input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text fa fa-phone"></span>
                                </div>
                                <input type="number" id="txtCellphoneCompany" class="form-control form-control-sm" placeholder="Telefono" autocomplete="off" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="txtEmailCompany">
                                    Correo
                                </label>
                                <div class="input-group input-group-sm">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text fa fa-inbox"></span>
                                    </div>
                                    <input type="email" id="txtEmailCompany" class="form-control form-control-sm" placeholder="Correo" autocomplete="off" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <label for="txtAddressCompany">
                        Direccion
                    </label>
                    <textarea class="form-control form-control-sm" id="txtAddressCompany" placeholder="Direccion"></textarea>

                </div>
                <div class="form-group">
                    <label for="dropdownLevel">
                        Nivel
                    </label>
                    <select id="dropdownLevel" class="form-control form-control-sm" style="width:100%">
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                    </select>

                </div>
                <div class="form-group">
                    <label>
                        Moneda
                    </label>
                    <select id="dropdownCurrency" class="form-control form-control-sm" style="width:100%">
                        </select>
                </div>


            </div>

            <div class="text-center pb-4">
              

                <button type="button" class="btn btn-danger"  onclick="closeModal()">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="saveCompany()" id="btnInsertForm">Guardar</button>
           
            </div>
        </div>
    </div>
</div>

