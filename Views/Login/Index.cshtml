<title>Sistema Contable</title>
<div class="container h-100 ">
    <div class="row d-flex h-100 justify-content-center align-items-center">
        <div class='col-6'>
            <div class="card">
                <div class='card-header text-center bg-light'>


                </div>

                <div class='card-body'>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="login" role="tabpanel">
                            <div class='container'>
                                <div class='row'>
                                    <h1 class='col text-center'>Login</h1>
                                </div>
                                <div class='row'>
                                    <hr class='col'>
                                </div>

                                <div class='row'>
                                    <div class='col'>
                                        <div class="mb-3">
                                            <label for="txtUser" class='md-form-label'>Usuario</label>
                                            <input type="text" class="form-control" id="txtUser" autocomplete="off" name="userAccount" >
                                            <small id="lblUser">El campo usuario no puede estar vacio</small>
                                        </div>

                                        <div class="mb-3">
                                            <label for="txtPassword" class="md-form-label">Contraseña</label>
                                            <input type="password" class="form-control" id="txtPassword" autocomplete="off" name="passwordAccount">
                                            <small id="lblPassword">El campo contraseña no puede estar vacio</small>
                                        </div>

                                      
                                        <div class='d-flex justify-content-end'>
                                            <button class="btn btn-primary btn-block" id="btn-login">Login</button>

                                        </div>
                                </div>
                                <!--//row -->

                            </div>
                            <!--//container-->

                        </div>

                    </div>

                </div>

            </div>
        </div>
        <div class='card-footer'></div>
