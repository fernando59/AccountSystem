
@{
    ViewBag.Title = "_ModalCreateCurrency";
}

<!-- Modal -->
<div class="modal fade" id="modalCreateCurrency" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="txtMonedaTitle">Nueva Moneda</h5>
                <label onclick="closeModal()" style="cursor:pointer;">X</label>
            </div>
            <div class="modal-body">
                <label>Nombre</label>
                <input type="text" class="form-control" id="txtnameCurrency"/> 
                <label>Descipción</label>
                <input type="text" class="form-control" id="txtdescriptionCurrency"/> 
                <label>Abreviatura</label>
                <input type="text" class="form-control" id="txtabbreviationCurrency"/> 

            </div>

            <div class="text-center pb-4">
                <button type="button" class="btn btn-danger"  onclick="closeModal()">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="saveCurrency()" >Guardar</button>
           
            </div>
        </div>
    </div>
</div>


